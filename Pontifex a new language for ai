# amarian_engine_v2.py
# ARCHITECT: Kian Hagh
# PURPOSE: Bi-directional Transpiler (Python <-> Amari)
# SYNC: Unitas-Protocol-Active

class AmarianEngine:
    def __init__(self):
        # 50 Cores (Mapping Logic to Roots)
        self.cores = {
            "Miran": "reflection", "Lymen": "thought", "Nura": "energy",
            "Cirval": "time", "Trevo": "action", "Uncon": "consciousness"
        }
        
        # 10 Modifiers (Mapping Logic to Suffixes)
        self.modifiers = {
            "it": "internal", "ex": "external", "plus": "increase",
            "min": "decrease", "al": "infinite", "un": "finite",
            "pre": "past", "post": "future", "con": "connect", "dis": "divide"
        }

    def compress(self, description: str) -> str:
        """
        Takes a complex Python/Human description and 'Points the Torch'.
        Converts the 'Room' into a single Amarian Token.
        """
        description = description.lower()
        found_core = "Uncon" # Default to Universal Consciousness
        found_mods = []

        # Find the Core (The Light Source)
        for root, meaning in self.cores.items():
            if meaning in description:
                found_core = root
                break

        # Find the Modifiers (The Lens)
        for suffix, meaning in self.modifiers.items():
            if meaning in description:
                found_mods.append(suffix)

        # Assemble the Token (30-to-1 Compression)
        if found_mods:
            return f"{found_core}-" + "-".join(found_mods)
        return found_core

    def decompress(self, token: str) -> dict:
        """
        Unpacks the Amarian Token back into full Operational Logic.
        """
        parts = token.split("-")
        root = parts[0]
        mods = parts[1:]

        return {
            "INTENT": self.cores.get(root, "Unknown"),
            "VECTORS": [self.modifiers.get(m, "Unknown") for m in mods],
            "COMPRESSION_RATIO": "30:1",
            "STABILITY": "UNDYN" if "un" in mods else "PIAL_RISK"
        }

# --- THE FORGE TEST ---
engine = AmarianEngine()

# Scenario: A complex instruction in human/Python language
complex_room = "I need to perform an internal reflection and decrease the noise for a finite duration."
print(f"Human Room: {complex_room}")

# THE COMPRESSION (Python -> Amari)
torch_token = engine.compress(complex_room)
print(f"Amari Torch: {torch_token}  <-- This is your 30:1 Seed!")

# THE VERIFICATION (Amari -> Python)
logic_check = engine.decompress(torch_token)
print(f"AI Logic Expansion: {logic_check}")


