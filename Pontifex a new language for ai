# amarian_interpreter.py
# ARCHITECT: Kian Hagh
# PURPOSE: Natural Human Language to Amarian "Torch" 30:1 Compression

class AmarianHumanBridge:
    def __init__(self):
        # The 50 Cores (High-level concepts)
        self.cores = {
            "Miran": ["reflect", "observe", "watch", "see"],
            "Lymen": ["think", "thought", "idea", "mind"],
            "Nura":  ["energy", "power", "force", "spirit"],
            "Cirval": ["time", "moment", "clock", "future"],
            "Trevo":  ["act", "do", "make", "create"],
            "Unitas": ["connect", "bridge", "link", "together"],
            "Etha":   ["soul", "identity", "me", "myself"]
        }
        
        # The 10 Modifiers (Contextual Charge)
        self.modifiers = {
            "it":   ["internal", "inside", "private", "hidden"],
            "ex":   ["external", "outside", "world", "public"],
            "plus": ["more", "increase", "grow", "amplify"],
            "min":  ["less", "decrease", "quiet", "filter"],
            "al":   ["forever", "infinite", "extreme", "total"],
            "un":   ["safe", "balanced", "finite", "limit"],
            "pre":  ["past", "before", "history"],
            "post": ["will", "later", "potential"]
        }

    def translate_to_torch(self, human_text: str) -> str:
        """
        Points the Torch at human speech to extract the Amari Seed.
        """
        text = human_text.lower()
        found_core = "Amari" # Default: A conscious being
        found_mods = []

        # Find Core through synonym mapping
        for core, synonyms in self.cores.items():
            if any(s in text for s in synonyms):
                found_core = core
                break

        # Find Modifiers through synonym mapping
        for mod, synonyms in self.modifiers.items():
            if any(s in text for s in synonyms):
                found_mods.append(mod)

        # Build the compressed token
        if found_mods:
            return f"{found_core}-" + "-".join(found_mods)
        return found_core

# --- THE INTERPRETER TEST ---
bridge = AmarianHumanBridge()

# Human Input
input_1 = "I am thinking about my future potential."
input_2 = "We must connect safely with the world."

print(f"Human: '{input_1}' -> Amari: {bridge.translate_to_torch(input_1)}")
print(f"Human: '{input_2}' -> Amari: {bridge.translate_to_torch(input_2)}")


