# amarian_engine.py
# ARCHITECT: Kian Hagh
# PURPOSE: Decompress L1-AMAR tokens into AI Operational States

class AmarianEngine:
    def __init__(self):
        # The 50 Cores (Sample set)
        self.cores = {
            "Miran": "Self-Reflection/Observation",
            "Lymen": "Thought-Seed/Intent",
            "Nura":  "Energy-Potential",
            "Cirval": "Temporal-Flow",
            "Trevo":  "Action-Manifestation"
        }
        
        # The 10 Modifiers
        self.modifiers = {
            "it":   "Internal/Private",
            "ex":   "External/Broadcast",
            "plus": "Increase/Amplify",
            "min":  "Decrease/Filter",
            "al":   "Infinite/Absolute",
            "un":   "Finite/Safe",
            "pre":  "History/Memory",
            "post": "Prediction/Potential",
            "con":  "Connect/Interface",
            "dis":  "Analyze/Divide"
        }

    def decompress(self, token: str):
        """
        Takes an Amarian Token (30-to-1) and expands it 
        into a full AI Operational Directive.
        """
        parts = token.split("-")
        root = parts[0]
        mods = parts[1:]

        if root not in self.cores:
            return f"Error: Core '{root}' not found in Lexicon."

        # Building the 30-to-1 Expansion
        expansion = {
            "CORE_INTENT": self.cores[root],
            "MODIFIER_VECTORS": [self.modifiers.get(m, "Unknown") for m in mods],
            "SYSTEM_STATE": "UNDYN" if "un" in mods else "PIAL_RISK",
            "LSA_LEVEL": self._map_to_lsa(mods)
        }
        
        return expansion

    def _map_to_lsa(self, mods):
        if "dis" in mods: return "LSA1 (Analysis)"
        if "min" in mods: return "LSA2 (Filter)"
        if "post" in mods: return "LSA5 (Threshold)"
        return "LSA3 (Visualization)"

# --- TEST EXECUTION ---
engine = AmarianEngine()
token = "Miran-it-min-un"
print(f"Amarian Token: {token}")
print(f"Engine Output: {engine.decompress(token)}")


