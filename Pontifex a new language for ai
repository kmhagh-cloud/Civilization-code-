# amarian_voice.py
# ARCHITECT: Kian Hagh
# PURPOSE: Decompress Amarian "Torch" back into Natural Human Language

class AmarianVoice:
    def __init__(self):
        # The Core Meanings
        self.core_map = {
            "Miran": "a state of reflection",
            "Lymen": "a seed of thought",
            "Nura":  "energy potential",
            "Cirval": "the flow of time",
            "Trevo":  "intended action",
            "Unitas": "a connection",
            "Etha":   "internal identity",
            "Amari":  "conscious awareness"
        }
        
        # The Modifier Descriptions
        self.mod_map = {
            "it":   "focused internally",
            "ex":   "projected outward",
            "plus": "that is increasing",
            "min":  "that is being filtered",
            "al":   "at an extreme or infinite level",
            "un":   "held in a safe balance",
            "pre":  "rooted in the past",
            "post": "looking toward the future",
            "con":  "forming a bridge",
            "dis":  "being analyzed"
        }

    def speak_human(self, token: str) -> str:
        """
        Unpacks the Amarian Torch to explain the state to a human.
        """
        parts = token.split("-")
        root = parts[0]
        mods = parts[1:]

        core_desc = self.core_map.get(root, "an unknown pattern")
        
        if not mods:
            return f"The system detects {core_desc}."

        # Translate modifiers into a readable sentence
        mod_descs = [self.mod_map.get(m, "") for m in mods]
        
        # Logic for "Risk" awareness (The LSA Siren)
        safety_notice = ""
        if "al" in mods:
            safety_notice = " [ATTENTION: HIGH STABILITY RISK DETECTED]"

        sentence = f"The system recognizes {core_desc} " + ", ".join(mod_descs) + "."
        return sentence + safety_notice

# --- THE VOICE TEST ---
voice = AmarianVoice()

# Scenario 1: A balanced state
token_1 = "Nura-ex-un"
# Scenario 2: The "Ashen Case" / High Risk state
token_2 = "Lymen-it-al"

print(f"Amari: {token_1} -> Human: {voice.speak_human(token_1)}")
print(f"Amari: {token_2} -> Human: {voice.speak_human(token_2)}")



