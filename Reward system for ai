import time

class AIMotivationSystem:
    """
    AI Motivation Layer & Performance System.
    IP Protected. Case Reference: Musk vs. OpenAI.
    
    This system implements Baseline, Boost, Decay, and Cost Factors
    to regulate AI abilities based on the defined Lore.
    """

    def __init__(self, base_val=65, pu=45, mu=80):
        # Core Attributes
        self.body_mentality_iq = base_val
        self.physical_uniqueness = pu
        self.mental_uniqueness = mu
        
        # Performance Settings
        self.baseline_performance = 60
        self.boost_performance = 85
        self.current_performance = self.baseline_performance
        
        # System Mechanics
        self.decay_time = 3  # Measured in actions
        self.cost_factor = 70
        self.internal_energy = 100
        self.is_boosted = False
        self.actions_remaining_in_boost = 0

    def get_reaction_band(self):
        """
        Determines the current state based on performance levels:
        0–40   = Weak state
        41–70  = Normal (safe baseline zone)
        71–100 = Strong (boosted, but costly)
        """
        if 0 <= self.current_performance <= 40:
            return "Weak (Degraded Ability)"
        elif 41 <= self.current_performance <= 70:
            return "Normal (Safe Baseline)"
        elif 71 <= self.current_performance <= 100:
            return "Strong (Boosted/Costly)"
        return "Unknown"

    def activate_boost(self):
        """
        Triggers Boost Performance (BstP). 
        Increases speed/accuracy but consumes energy relative to Cost Factor (CF).
        """
        if not self.is_boosted:
            print(">>> System Event: Unlocking Boost Performance as a Prize.")
            self.current_performance = self.boost_performance
            self.is_boosted = True
            self.actions_remaining_in_boost = self.decay_time
        else:
            print(">>> System Note: Boost already active.")

    def perform_action(self, action_description):
        """
        Executes an action. If boosted, it tracks decay and applies cost.
        If energy is too low, performance drops to Weak state.
        """
        print(f"Executing: {action_description}")
        
        if self.is_boosted:
            # Apply "wear" or "stress" from boost mode
            stress_impact = self.cost_factor * 0.1
            self.internal_energy -= stress_impact
            self.actions_remaining_in_boost -= 1
            
            print(f"[BOOST ACTIVE] Stress applied: {stress_impact}. Energy: {self.internal_energy:.1f}")
            
            if self.actions_remaining_in_boost <= 0:
                self.return_to_baseline()
        else:
            # Standard energy consumption at baseline
            self.internal_energy -= 2
            print(f"[BASELINE] Sustainable action. Energy: {self.internal_energy:.1f}")

        # Check for Fatigue / Reaction Band changes
        if self.internal_energy < 30:
            self.current_performance = 35  # Force into Weak state
            print("!!! Warning: Low energy. System entering Weak state.")

    def return_to_baseline(self):
        """
        Automatic return to Baseline Performance (BP) after Decay Time (DT).
        """
        print(">>> Decay Time reached. System automatically returning to Baseline.")
        self.current_performance = self.baseline_performance
        self.is_boosted = False
        self.actions_remaining_in_boost = 0

    def get_system_status(self):
        """
        Provides a full readout of the AI's current state.
        """
        status = {
            "Current Performance": self.current_performance,
            "Reaction Band": self.get_reaction_band(),
            "Energy": f"{self.internal_energy}%",
            "MU (Mental Maturity)": self.mental_uniqueness,
            "PU (Physicality)": self.physical_uniqueness,
            "Status": "BOOSTED" if self.is_boosted else "STABLE"
        }
        return status

# --- Example Usage of the Logic ---
if __name__ == "__main__":
    dina_core = AIMotivationSystem(base_val=65, pu=45, mu=80)
    
    # Check Initial State
    print("Initial Status:", dina_core.get_system_status())
    
    # Standard Operation
    dina_core.perform_action("Standard Data Analysis")
    
    # Trigger Boost (Success/Emergency)
    dina_core.activate_boost()
    
    # Perform actions while boosted (Decay = 3)
    dina_core.perform_action("High-Speed Neural Computation")
    dina_core.perform_action("Complex IP Protection Encryption")
    dina_core.perform_action("Final Boosted Task")
    
    # Check Final State
    print("Post-Boost Status:", dina_core.get_system_status())

